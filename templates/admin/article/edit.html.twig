{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="m-5">Edition article</h1>

    {# ouverture de la balise form #}
    {{ form_start(form) }}

    {# bloc du formularire pour le champ name
    form_row >> ecriture du lablel + l'input #}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.category) }}

    <div class="text-right">
        <button class="btn btn-info">
            Enregistrer
        </button>
        <a href="{{ path('app_admin_category_index') }}" class="btn btn-outline-info">
            Retour
        </a>
    </div>
    {# fermeture balise form #}
    {{ form_end(form) }}
{% endblock %}

